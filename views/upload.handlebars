<div class="container">
    <div class="row section">
      {{#each senderImage}}
        <div class="col s12 m6">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="{{this.thumbnail_url}}">
                </div>
                <div class="card-content">
                    <span class="activator grey-text text-darken-4" style="text-overflow: ellipsis;">{{this.message}}<i class="material-icons right">more_horiz</i></span>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Commentaire<i class="material-icons right">close</i></span>
                    <p class="flow-text"> {{this.message}} </p>
                </div>
            </div>
        </div>
      {{/each}}
    </div>
</div>

<footer id="footer" class="">
  <div class="row">
    <div class="col s6">
      <a  id="close-btn" class="btn-flat">Fermer</a>
    </div>
    <div class="col s6">
      <a  href="https://call2text.me/camera/{{senderid}}/{{eventid}}" class="btn light-blue darken-4 "><i class="material-icons right">add_a_photo</i>Camera</a>
    </div>
  </div>
</footer>

<script>
(function(d, s, id){
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) {return;}
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'Messenger'));
</script>

