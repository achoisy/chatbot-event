{{#if eventImage}}
<div class="container padding-btn">
    <div class="row section">
      {{#each eventImage}}
        <div class="col s12 m6">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                  <img src="https://monmagazine.fr/messenger/proxied_image/{{this.public_id}}" class="activator" alt="{{this.message}}">
                </div>
                <div class="card-content">
                    <span class="activator grey-text text-darken-4" style="text-overflow: ellipsis;">{{this.message}}<i class="material-icons right">more_horiz</i></span>
                </div>
                <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4">Commentaire<i class="material-icons right">close</i></span>
                  <div class="row ">
                    <div class="col s4 offset-s4 m2">
                      <img src="{{this.author_pic}}" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
                    </div>
                    <div class="col s12 m10">
                      <span class="grey-text text-darken-4 flow-text">
                        {{this.message}}
                      </span>
                    </div>
                </div>
            </div>
            </div>
        </div>
      {{/each}}
    </div>
</div>

<footer id="footer" class="">
  <div class="col s12 m3">
    <a  id="close-btn" class="btn light-blue darken-4 btn-fullblock">Fermer</a>
  </div>
</footer>

{{else}}
<div class="container">
  <div class="row section">
    <div class="col S12">
      <h4 class="light-blue-text text-darken-4">Pas de photo valid√©</h4>
    </div>
  </div>
</div>
  <footer id="footer" class="">
    <div class="col s12 m3">
      <a  id="close-btn" class="btn light-blue darken-4 btn-fullblock">Fermer</a>
    </div>
  </footer>
{{/if}}

<script>
(function(d, s, id){
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) {return;}
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'Messenger'));

</script>

<script type="text/javascript" src="https://monmagazine.fr/js/jquery-3.1.1.min.js"></script>
<script src='https://monmagazine.fr/js/jquery.cloudinary.js' type='text/javascript'></script>
<script type="text/javascript" src="https://monmagazine.fr/js/materialize.min.js"></script>

<script>

$.cloudinary.config({ cloud_name: 'monmagazine-fr' });

$('#close-btn').click( function() {

  var isSupported = MessengerExtensions.isInExtension();

  if (isSupported) {
    MessengerExtensions.requestCloseBrowser(function success() {
  	}, function error(err) {
      window.open('','_self').close();
  	});
  } else {
    window.open('','_self').close();
    window.location.href = "https://www.messenger.com/closeWindow/?image_url=IMAGE_URL&display_text=FERMETURE";
  }

});

</script>
