
<div class="container padding-btn">
  {{#if photo}}
    <div class="row section">
        <div class="col s12 m6">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="{{photo.thumbnail_url}}">
                </div>
                <div class="card-content">
                    <span class="activator grey-text text-darken-4" style="text-overflow: ellipsis;">{{photo.message}}<i class="material-icons right">more_horiz</i></span>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Commentaire<i class="material-icons right">close</i></span>
                    <p class="flow-text"> {{photo.message}} </p>
                    <p class="flow-text">AttachId: {{photo._id}} </p>
                    <p class="flow-text">EventId: {{photo.eventid}} </p>
                </div>
            </div>
        </div>
    </div>
</div>

<footer id="footer" class="">
  <div class="row">
    <div class="col s6">
      <a  href="https://monmagazine.fr/messenger/photo/notvalide/{{photo.eventid}}/{{photo._id}}" class="btn light-blue darken-4 btn-large"><i class="material-icons right">thumb_down</i>NON</a>
    </div>
    <div class="col s6">
      <a  href="https://monmagazine.fr/messenger/photo/valide/{{photo.eventid}}/{{photo._id}}" class="btn light-blue darken-4 btn-large"><i class="material-icons right">thumb_up</i>OUI</a>
    </div>
  </div>
</footer>

{{else}}
  <div class="row section">
    <div class="col S12">
      <h4 class="light-blue-text text-darken-4">Pas de photo a valider</h4>
    </div>
  </div>
  <footer id="footer" class="">
    <div class="col s12 m3">
      <a  id="close-btn" class="btn light-blue darken-4 btn-fullblock">Fermer</a>
    </div>
  </footer>
{{/if}}


<script>
(function(d, s, id){
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) {return;}
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'Messenger'));
</script>

